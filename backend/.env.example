# Database connection string for Neon PostgreSQL (asyncpg format)
DATABASE_URL=postgresql+asyncpg://username:password@your-neon-host.aws.neon.tech/neondb?ssl=require

# JWT Secret - MUST match Better Auth secret on frontend
BETTER_AUTH_SECRET=your-super-secret-key-at-least-32-characters-long

# CORS allowed origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:3000

# Environment (development/production)
ENVIRONMENT=development

# OpenAI API Key for AI Chatbot
OPENAI_API_KEY=sk-your-openai-api-key-here
